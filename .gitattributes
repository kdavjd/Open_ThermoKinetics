# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Python source
*.py text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Data files
*.csv text eol=lf

# Binary files (no normalization)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
