    "metadata": {
        "title": {
            "ru": "Загрузка файлов",
            "en": "File Loading"
        },
        "description": {
            "ru": "Подробное руководство по загрузке и настройке экспериментальных данных",
            "en": "Detailed guide for loading and configuring experimental data"
        },
        "difficulty": "beginner",
        "estimated_time": "10 минут",
        "tags": [
            "file_loading",
            "data_import",
