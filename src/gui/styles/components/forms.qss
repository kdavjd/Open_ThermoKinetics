/* --- QLineEdit --- */
QLineEdit {
    background-color: {{bg_base}};
    color: {{text_primary}};
    border: 1px solid {{border}};
    border-radius: {{radius_sm}};
    min-height: 24px;
    padding: 2px 6px;
}

QLineEdit:focus {
    border-color: {{accent}};
}

QLineEdit:disabled {
    background-color: {{bg_surface}};
    color: {{text_muted}};
}

/* --- QSpinBox / QDoubleSpinBox --- */
QSpinBox,
QDoubleSpinBox {
    background-color: {{bg_base}};
    color: {{text_primary}};
    border: 1px solid {{border}};
    border-radius: {{radius_sm}};
    min-height: 24px;
    padding: 2px 6px;
}

QSpinBox:focus,
QDoubleSpinBox:focus {
    border-color: {{accent}};
}

QSpinBox:disabled,
QDoubleSpinBox:disabled {
    background-color: {{bg_surface}};
    color: {{text_muted}};
}

QSpinBox::up-button,
QDoubleSpinBox::up-button,
QSpinBox::down-button,
QDoubleSpinBox::down-button {
    width: 16px;
    border: none;
    background-color: {{bg_elevated}};
}

QSpinBox::up-button:hover,
QDoubleSpinBox::up-button:hover,
QSpinBox::down-button:hover,
QDoubleSpinBox::down-button:hover {
    background-color: {{border}};
}

/* --- QComboBox --- */
QComboBox {
    background-color: {{bg_base}};
    color: {{text_primary}};
    border: 1px solid {{border}};
    border-radius: {{radius_sm}};
    min-height: 24px;
    padding: 2px 6px;
}

QComboBox:focus {
    border-color: {{accent}};
}

QComboBox:disabled {
    background-color: {{bg_surface}};
    color: {{text_muted}};
}

QComboBox::drop-down {
    width: 20px;
    border: none;
    background-color: {{bg_elevated}};
}

QComboBox QAbstractItemView {
    background-color: {{bg_surface}};
    color: {{text_primary}};
    border: 1px solid {{border}};
    selection-background-color: {{accent_light}};
    selection-color: {{accent}};
}

/* --- QCheckBox --- */
QCheckBox {
    color: {{text_primary}};
    spacing: 6px;
}

QCheckBox::indicator {
    width: 14px;
    height: 14px;
    border: 1px solid {{border_strong}};
    border-radius: 2px;
    background-color: {{bg_base}};
}

QCheckBox::indicator:checked {
    background-color: {{accent}};
    border-color: {{accent}};
}

QCheckBox::indicator:disabled {
    background-color: {{bg_surface}};
    border-color: {{border}};
}

QCheckBox:disabled {
    color: {{text_muted}};
}
